PORT=5050
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/devflow
JWT_SECRET=<strong-random-secret>
FRONTEND_URL=https://<your-pages-domain>.pages.dev
RESET_TOKEN_EXPIRES_MIN=60

# Optional (password reset email)
# Recommended: use Resend (HTTPS API) to avoid SMTP egress restrictions on some hosts.
EMAIL_PROVIDER=resend
RESEND_API_KEY=
EMAIL_FROM="DevFlow <no-reply@yourdomain.com>"

# SMTP (used when EMAIL_PROVIDER=smtp, or when RESEND_API_KEY is not set)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=
SMTP_TLS_REJECT_UNAUTHORIZED=

# Optional (GitHub OAuth)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=
